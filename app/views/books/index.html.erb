     <div class="container">
     <div class="row">
       <div class="col-md-3">
    <%= render 'books/info', user: current_user %>
    <%= render 'books/new', book: @book, new_book:@new_book %>
       </div>

    <div class="col-md-8 offset-md-1">
    <%= form_with model: @book, local:true do |f| %>
    <h4>Books</h4>
    <table class="table">
     <tr>
        <th>Title</th>
        <th>Opinion</th>
     </tr>
    <% @books.each do |book| %>
    <thead>
      <tr>
      <th><%= link_to(user_path(book.user)) do %></th>
      <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
      <% end %>
      <th><%= link_to book.title, book_path(book) %></th>
      <th><%= book.body %></th>
      </tr>
    </thead>
    <% end %>
    </div>
    </table>
    </div>
    </div>
    <% end %>