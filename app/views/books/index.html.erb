     <div class="container">
     <div class="row">
       <div class="col-lg-4">
    <%= render 'books/info', books: @books %>
    <%= render 'books/new', book: @book %>
       </div>

    <div class="col-lg-8">
    <%= form_with model: @book, local:true do |f| %>
    <table class="table">
    <h4>Books</h4>
    <% @books.each do |book| %>
    <thead>
      <tr>
      <th><%= link_to user_path(book.user) do %></th>
      <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
      <th><%= book.user.name %></th>
      <% end %>
      <%= link_to book_path(book) do %>
      <th><%= book.title %></th>
      <% end %>
      <th><%= book.body %></th>
      </tr>
    </thead>
    <% end %>
    </div>
    </table>
    </div>
    </div>
    <% end %>