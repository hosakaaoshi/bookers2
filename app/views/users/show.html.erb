
 <div class="row">
   <div class="col-lg-4">
    <%= render 'books/info', users: @users %>
    <%= render 'books/new', new_book:@new_book %>
   </div>

   <div class="col-lg-8">
      <h4>Books</h4>
     <table class="table">
      <thead>
       <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
       <tr>
         <%= link_to (book.user) do %>
           <th><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %></th>
           <th><%= book.user.name %></th>
         <% end %>
         <th><p><%= book.title %></p></th>
         <th><P><%= book.body %></p></th>
       </tr>
       <% end %>
      </tbody>
     </table>
     </div>
     </div>
