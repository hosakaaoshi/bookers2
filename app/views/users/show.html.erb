<div class="notifications">
 <div class="notice">successfully</div>
</div>
 <div class="row">
   <div class="col-md-3">
    <%= render 'books/info', user: @user %>
    <%= render 'books/new', new_book:@new_book %>
   </div>

   <div class="col-md-8 offset-md-1">
      <h4>Books</h4>
     <table class="table">
      <thead>
       <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
       <tr>
         <%= link_to (book.user) do %>
           <th><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %></th>
         <% end %>
         <th><p><%= link_to book.title, book_path(book) %></p></th>
         <th><P><%= book.body %></p></th>
       </tr>
       <% end %>
      </tbody>
     </table>
     </div>
     </div>
