<% if @book.errors.any? %>
 <%= @book.errors.count %>error
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
 <div class="row">
   <div class="col-lg-4">
    <%= render 'books/info', users: @users %>
    <%= render 'books/new', book: @book %>
   </div>

   <div class="col-lg-8">
      <h4>Books</h4>
     <table>
     <% @books.each do |book| %>
     <tr>
       <% link_to books_path(current_user) do %>
         <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
         <th><%= book.user.name %></th>
       <% end %>
       <th><p><%= book.title %></p></th>
       <th><P><%= book.body %></p></th>
     </tr>
     <% end %>
     </table>
     </div>
     </div>
