<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
 <% end %>

 <div class="container">
 <div class="row">
   <div class="col-lg-4">
 <%= render 'books/info', user: current_user %>
 <%= render 'books/new', new_book:@new_book %>
   </div>

 <div class="col-lg-8">
     <h2>Users</h2>
   <table class="table">
   <% @users.each do |user| %>
   <thead>
    <tr>
    <th><%= attachment_image_tag current_user, :profile_image, :fill, 30, 40, fallback: "no_image.jpg" %></th>
    <th><%= user.name %></th>
    <th><%= link_to "show", user_path(user) %></th>
    </tr>
   </thead>
   <% end %>
 </div>
 </div>
 </div>